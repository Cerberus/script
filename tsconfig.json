{
	"compilerOptions": {
		"lib": ["es2018", "dom"],
    "outDir": "lib",
		"module": "commonjs",
		"target": "es2017",
		"sourceMap": true,
		"moduleResolution": "node",
		"strict": true,
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
			"paths": {
			"*": ["src/*", "node_modules/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*", "lib.d.ts"],
	"exclude": ["node_modules", "**/__tests__/**/*"]
}
