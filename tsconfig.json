{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"target": "es2019",
    "outDir": "lib/esm",
		"moduleResolution": "node",
		"strict": true,
		"baseUrl": ".",
		"declaration": true,
		"paths": {
			"*": ["src/*", "node_modules/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*", "lib.d.ts"],
	"exclude": ["node_modules"]
}
